{
  config,
  lib,
  pkgs,
  inputs,
  ...
}:

let
  cfg = config.mySystem.agenix.sshKeys;
in
{
  options.mySystem.agenix.sshKeys = with lib; {
    enable = mkEnableOption "sshKeys";
  };

  config = lib.mkIf cfg.enable {

    # puts my_identity private and public keys in root folder
    systemd.services."sshKeys" = {
      script = ''
        cat ${config.age.secrets.my_identity.path} > /root/.ssh/my_identity
        echo "ssh-rsa  yeshey@Manjaro-Laptop" > /root/.ssh/my_identity.pub
      '';
      serviceConfig = {
        #User = "yeshey";
        Type = "oneshot";
      };
      #after = [ "agenix.service" ];
      #requires = [ "agenix.service" ];
      wantedBy = [ "multi-user.target" ];
    }; 

  };
}
