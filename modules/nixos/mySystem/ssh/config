# IdentityFile ~/.ssh/my_identity # id_ed25519

# Read more about SSH config files: https://linux.die.net/man/5/ssh_config

Host unibo
    HostName giano.cs.unibo.it
    User joaofilipe.silvade@studio.unibo.it
    RemoteCommand cd /scratch.hpc/joaofilipe.silvade && exec $SHELL
    RequestTTY yes

# These are for connecting to my PCs with double hops through the server.
# First hop: Connect to the remote server
Host oracle
  HostName 143.47.53.175
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# Second hop: Connect from remote server to the Lenovo PC
Host hyrulecastle
  HostName localhost
  Port 2232
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle

# Second hop: Connect from remote server to the Lenovo PC with root
Host hyrulecastleroot
  HostName localhost
  Port 2232
  User root
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle

Host hyrulecastle-vpn
  HostName 10.8.0.10  # Always this IP
  User root
  Port 22
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# Second hop: Connect from remote server to the surface Pro
Host kakariko
  HostName localhost
  Port 2333
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle

# Second hop: Connect from remote server to the surface Pro
Host kakarikoroot
  HostName localhost
  Port 2333
  User root
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle

Host kakariko-vpn
  HostName 10.8.0.11
  User root
  Port 22
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host a70phone-vpn
  HostName 10.8.0.12
  User yeshey
  Port 22
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null