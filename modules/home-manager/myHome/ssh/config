# also makes it so you can use my_identity for github instead of their keys with weird names
# IdentityFile ~/.ssh/my_identity # id_ed25519

# Read more about SSH config files: https://linux.die.net/man/5/ssh_config

Host unibo
    HostName giano.cs.unibo.it
    User joaofilipe.silvade@studio.unibo.it
    RemoteCommand cd /scratch.hpc/joaofilipe.silvade && exec $SHELL
    RequestTTY yes

Host minerva
    HostName minerva.laced.isec.pt
    User jonnas
    ForwardX11    yes
    ForwardX11Trusted    yes
    IdentityFile ~/.ssh/id_minerva

# These are for connecting to my PCs with double hops through the server.
# First hop: Connect to the remote server
Host oracle
  HostName 143.47.53.175
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# Second hop: Connect from remote server to the Lenovo PC
Host hyrulecastle
  HostName localhost
  Port 2232
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle

# Second hop: Connect from remote server to the surface Pro
Host kakariko
  HostName localhost
  Port 2333
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  ProxyJump oracle
# You can bind a port from the target PC to the local PC with for example:
# ssh -L 8891:localhost:8891 hyrulecastle

# VPN connections with UDP/TCP fallback
Match host hyrulecastle-vpn exec "nc -w 1 -z 10.8.0.10 22"
  HostName 10.8.0.10
Match host hyrulecastle-vpn  # fallback to TCP VPN
  HostName 10.8.1.10
Host hyrulecastle-vpn
  Port 22
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Match host kakariko-vpn exec "nc -w 1 -z 10.8.0.11 22"
  HostName 10.8.0.11
Match host kakariko-vpn  # fallback to TCP VPN
  HostName 10.8.1.11
Host kakariko-vpn
  Port 22
  User yeshey
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null